[Unit]
Description=tinybox LLM serve
After=network.target

[Service]
Type=simple
User=tiny
Group=tiny
EnvironmentFile=/etc/llmserve.env
ExecStart=python3 /home/tiny/tinygrad/examples/llama3.py --api --model /raid/weights/LLaMA-3/8B-SF-DPO/model.safetensors.index.json --size 8B --shard 2 --port 80
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
